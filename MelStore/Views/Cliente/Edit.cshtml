@model MelStore.Services.Clientes.Queries.ClienteModel

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" value=@Model?.Id />
    <div class="mb-3">
        <label class="form-label" asp-for="Nome">Nome do Cliente:</label>
        <input class="form-control" asp-for="Nome" placeholder="Seu nome" value=@Model?.Nome />
    </div>
    <button class="btn btn-primary" type="submit">Salvar</button>
</form>

